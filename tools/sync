#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$ROOT_DIR"

if ! command -v git >/dev/null 2>&1; then
  echo "git command not found; please install git to continue." >&2
  exit 1
fi

echo "Updating third-party libraries in ./3rdparty to their latest tracked commits..."
git submodule update --init --remote 3rdparty/generic #3rdparty/pybind11

echo "Done."
